<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/step_delta_calories_text_color"/>
            <corners android:radius="5dp"/>
            <padding android:bottom="5dp"
                android:top="5dp"
                android:left="5dp"
                android:right="5dp"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <solid android:color="#3FDE82"/>
            <corners android:radius="5dp"/>
            <padding android:bottom="5dp"
                android:top="5dp"
                android:left="5dp"
                android:right="5dp"/>
        </shape>
    </item>

</selector>