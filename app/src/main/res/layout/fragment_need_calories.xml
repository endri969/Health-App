<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewMain"
        android:fillViewport="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_need_calories_title"
                    android:id="@+id/textViewNeedCaloriesTextTitle"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="25sp"
                    android:typeface="normal"
                    android:padding="10dp" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_need_calories_spinner_title"
                android:textSize="20sp"
                android:id="@+id/textViewSpinnerTitle"
                android:layout_gravity="center_horizontal"
                android:padding="15dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerLifeStyle"
                android:entries="@array/array_life_style"
                android:padding="15dp"
                android:spinnerMode="dialog" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/text_bt_calculate_need_calories"
                    android:id="@+id/buttonCalculateNeedCalories"
                    android:background="@drawable/ripple_green"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_margin="10dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_need_calories"
                android:textSize="20sp"
                android:id="@+id/textViewNeedCaloriesText"
                android:layout_gravity="center_horizontal"
                android:padding="15dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_need_calories_normal"
                    android:textSize="20sp"
                    android:id="@+id/textViewNeedCaloriesNormal"
                    android:layout_gravity="center_horizontal"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_zero"
                    android:textSize="20sp"
                    android:id="@+id/textViewNeedCaloriesValue"
                    android:layout_gravity="center_horizontal"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_need_calories_loss_weight"
                    android:textSize="20sp"
                    android:id="@+id/textViewNeedCaloriesLossWeight"
                    android:layout_gravity="center_horizontal"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_zero"
                    android:textSize="20sp"
                    android:id="@+id/textViewNeedCaloriesLossWeightValue"
                    android:layout_gravity="center_horizontal"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_need_calories_fast_loss_weight"
                    android:textSize="20sp"
                    android:id="@+id/textViewNeedCaloriesFastLossWeight"
                    android:layout_gravity="center_horizontal"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_zero"
                    android:textSize="20sp"
                    android:id="@+id/textViewNeedCaloriesFastLossWeightValue"
                    android:layout_gravity="center_horizontal"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>